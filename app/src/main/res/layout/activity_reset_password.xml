<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Screens.User.ResetPasswordActivity">


    <EditText
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:text="Email"
        android:layout_margin="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"></EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REST PASSWORD"
        android:layout_margin="10dp"
        android:gravity="center"
        android:id="@+id/btn_ResetPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"></Button>

    <Button
        android:id="@+id/btn_Back"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="BACK">

    </Button>


</LinearLayout>